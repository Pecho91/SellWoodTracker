<Window x:Class="SellWoodTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SellWoodTracker"
        xmlns:viewmodel ="clr-namespace:SellWoodTracker:MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <!--<Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>-->


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="80"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="1">
            <TextBox Height="25"
              DockPanel.Dock="Top" 
              Text="First Name:"/>

            <TextBox Height="25"
              DockPanel.Dock="Top" 
              Text=""/>

            <Button Height="30"
                    Width="30"
                     DockPanel.Dock="Top"
                    
                    Content="Connect"
                     Command="{Binding ConnectToServerCommand}"/>

            <Button Height="30"
             DockPanel.Dock="Bottom"
             Content="Disconnect"
             Command="{Binding DisconnectFromServerCommand}"/>

        </DockPanel>
            

        <DockPanel Grid.Column="0">
            <TextBox Height="25"
                     DockPanel.Dock="Top" 
                        Text="First Name:" Width="179"/>

            <TextBox Height="25"
      DockPanel.Dock="Top" 
      Text=""/>

            <Button Height="30"
            Width="30"
             DockPanel.Dock="Top"
            
            Content="Connect"
             Command="{Binding ConnectToServerCommand}"/>

            <Button Height="30"
     DockPanel.Dock="Bottom"
     Content="Disconnect"
     Command="{Binding DisconnectFromServerCommand}"/>

        </DockPanel>



    </Grid>
</Window>
